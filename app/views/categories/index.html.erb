<p id="notice"><%= notice %></p>

<h1>Kanban Board</h1>

<table>
  <!--
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
-->

  <tbody>
    <tr>
    <% @categories.each do |category| %>
    <td>
      <table>
        <thead id="category-header">
      <tr>
        <td id="category-name"><%= category.name %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </thead>
    <tbody id="category-body">
      <tr>
        <td colspan="4">
          <table>
            <tbody>
                <tr id="vertical-spacing"></tr>
              <% category.tasks.each do |task| %>
                <% if task.published %>
                  <tr>
                    <td id="task-name"><button onclick="showTask"><%= task.name %></button></td>
                  </tr>
                  <tr id="task-content">
                    <td><%= task.description %></td>
                    <td><%= link_to 'Edit', edit_task_path(task) %></td>
                    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                  <tr id="vertical-spacing"></tr>
                <% end %>
              <% end %>
              <tr>
                <td>  <%= link_to 'Add Task', new_task_path(category_id:category.id) %></td>
              </tr>
            </tbody>
        </table>
        </td>
      </tr>
    </tbody>
    </table>
    </td>
    <% end %>
  </tr>
  </tbody>
</table>

<br>

